<h1>Books</h1>

<%= link_to "New Book", new_book_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Pages</th>
    <th>Review Count</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= link_to book.name, book %></td>
    <td><%= book.pages %></td>
    <td><%= book.reviews.count %></td>
  </tr>
  <% end %>
</table>